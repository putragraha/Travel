<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nsystem.travel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.nsystem.travel.TravelApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.nsystem.travel.onboarding.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.nsystem.travel.logindriver.LoginDriverActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.nsystem.travel.loginuser.LoginUserActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.nsystem.travel.homedriver.HomeDriverActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.nsystem.travel.homeuser.HomeUserActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.nsystem.travel.armadasetting.ArmadaSettingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.nsystem.travel.historydriver.HistoryDriverActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>